<Window x:Class="aAppli.Views.QuantityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="QuantityDialog" Height="300" Width="300">
    <StackPanel>
        <TextBlock Text="Entrez la quantité" Margin="5"></TextBlock>
        <TextBox Name="quantityNumber" HorizontalAlignment="Left"
Margin="5"           Width="50"
                          Grid.Column="1"></TextBox>
        <Button Content="OK" Click="OKButton_Click" Margin="5"/>


    </StackPanel>
</Window>

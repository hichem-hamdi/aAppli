<Window x:Class="aAppli.Views.SizeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="SizeDialog" Height="300" Width="300">
    <StackPanel>
        <TextBlock Text="Selectionnez une taille" Margin="5"></TextBlock>
        <ComboBox Name="cbSizes" Margin="5"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"></ComboBox>
        <Button Content="OK" Click="OKButton_Click" Margin="5"/>
        
        
    </StackPanel>
</Window>
